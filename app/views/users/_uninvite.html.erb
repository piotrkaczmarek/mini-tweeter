<% if already_member? %>
  <%= button_to "Uninvite from #{@org_admined_by_current_user.name}",
               { controller: :organizations, action: :remove_member,
                 id: @org_admined_by_current_user.id,
                 member_id: @user.id },
               class: "btn btn-large",
               method: :post %>
<% else %>
  <%= button_to "Uninvite from #{@org_admined_by_current_user.name}",
               { controller: :invitations, action: :destroy,
                 id: @invitation.first.id },
               class: "btn btn-large",
               method: :delete %>
<% end %>

