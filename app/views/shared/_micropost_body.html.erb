<div class="micropost_body" id=<%="micropost_#{micropost.id}"%>>

  <span class="content"><%= micropost.content %></span>
  <%= render 'microposts/attachments', micropost: micropost %>
  <span class="timestamp">
  Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <%= render 'microposts/original_post_body', micropost: micropost %>
  <p>
    <div class="row-fluid rating">
      <div class="span1">
        <%= render 'microposts/answer_micropost_button', micropost: micropost %>
      </div>
      <div class="span1">
        <%= render 'microposts/delete_micropost_button', micropost: micropost %>
      </div>
        <div class="span7">
          <%= render 'shared/rating', micropost: micropost %>
        </div>
    </div>
  </p>
</div>
